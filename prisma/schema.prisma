generator client  {
  provider                        = "prisma-client-js"
}

generator nestjsDto  {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "../src"
  outputToNestJsResourceStructure = "true"
  reExport                        = "true"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:P455b017.S3rv3r@tobiasmesquita.dev:24832/postgres?schema=public"
}

model Job {
  jobId     String   @db.Uuid @default(uuid()) @id
  name      String

  /// @DtoRelationCanCreateOnCreate
  /// @DtoRelationCanConnectOnCreate
  /// @DtoRelationCanCreateOnUpdate
  /// @DtoRelationCanConnectOnUpdate
  people    Person[]

  /// @DtoReadOnly
  isDeleted Boolean  @default(false)
  /// @DtoReadOnly
  createdAt DateTime @default(now())
  /// @DtoReadOnly
  updatedAt DateTime @default(now())
  /// @DtoReadOnly
  deletedAt DateTime?
  revision  String   @unique @default(uuid())
}

model Company {
  companyId String   @db.Uuid @default(uuid()) @id
  name      String

  /// @DtoRelationCanCreateOnCreate
  /// @DtoRelationCanConnectOnCreate
  /// @DtoRelationCanCreateOnUpdate
  /// @DtoRelationCanConnectOnUpdate
  people    Person[]

  /// @DtoReadOnly
  isDeleted Boolean  @default(false)
  /// @DtoReadOnly
  createdAt DateTime @default(now())
  /// @DtoReadOnly
  updatedAt DateTime @default(now())
  /// @DtoReadOnly
  deletedAt DateTime?
  revision  String   @unique @default(uuid())
}

model Person {
  personId  String   @db.Uuid @default(uuid()) @id
  avatar    String
  firstName String
  lastName  String
  email     String

  jobId     String   @db.Uuid
  /// @DtoRelationCanCreateOnCreate
  /// @DtoRelationCanConnectOnCreate
  /// @DtoRelationCanCreateOnUpdate
  /// @DtoRelationCanConnectOnUpdate
  job       Job      @relation(fields: [jobId], references: [jobId])
  companyId String   @db.Uuid
  /// @DtoRelationCanCreateOnCreate
  /// @DtoRelationCanConnectOnCreate
  /// @DtoRelationCanCreateOnUpdate
  /// @DtoRelationCanConnectOnUpdate
  company   Company  @relation(fields: [companyId], references: [companyId])

  /// @DtoReadOnly
  isDeleted Boolean  @default(false)
  /// @DtoReadOnly
  createdAt DateTime @default(now())
  /// @DtoReadOnly
  updatedAt DateTime @default(now())
  /// @DtoReadOnly
  deletedAt DateTime?
  revision  String   @unique @default(uuid())
}
